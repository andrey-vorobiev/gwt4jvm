<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>

        .view {
            text-align: center;
            font:       14px monospace;
        }

        .centeredInlineBlock {
            display:    inline-block;
            margin:     100px auto 0;
            text-align: right;
        }

        .loginButton {
            margin-top: 10px;
        }

    </ui:style>

    <g:HTMLPanel styleName="{style.view}">
        <div class="{style.centeredInlineBlock}">
            <div>
                <span>Username: </span>
                <input type="text" ui:field="username"/>
            </div>
            <div>
                <span>Password: </span>
                <input type="password" ui:field="password"/>
            </div>
            <g:Button styleName="{style.loginButton}" ui:field="loginButton">Login</g:Button>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>